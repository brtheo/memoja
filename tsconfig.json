{
	"compilerOptions": {
		"module": "esnext",
		"target": "ES6",
		"moduleResolution": "node",
		"lib": [
			"ESNext.Array",
			"DOM",
			"ESNext",
			"ES2017",
			"ES2017.Intl"
		],
		"rootDir": "src",
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"**/*.ts"
	],
	"exclude": ["node_modules/"]
}